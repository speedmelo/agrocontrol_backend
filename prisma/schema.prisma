
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(cuid())
  name      String
  email     String @unique
  password  String
  farms     Farm[]
  createdAt DateTime @default(now())
}

model Farm {
  id      String  @id @default(cuid())
  name    String
  owner   User    @relation(fields: [ownerId], references: [id])
  ownerId String
  fields  Field[]
}

model Field {
  id      String @id @default(cuid())
  name    String
  size    Float
  farm    Farm   @relation(fields: [farmId], references: [id])
  farmId  String
}
